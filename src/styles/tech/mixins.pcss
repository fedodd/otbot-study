@define-mixin respond-to $media {
  @if $media == mobile {
    @media only screen and (max-width: 768px) { @mixin-content; }
  } @else if $media == tablet {
    @media only screen and (min-width: 768px) { @mixin-content; }
  } @else if $media == desk {
    @media only screen and (min-width: 1200px) { @mixin-content; }
  } @else if $media == large {
    @media only screen and (min-width: 1400px) { @mixin-content; }
  }
}
